<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="card position-absolute top-50 start-50 translate-middle">
    <h2 class="text-center mt-3 mx-3">Forgot your password?</h2>
    <div class="card-body text-center">
      <div class="mb-3">
        <%= f.label :email, class: "form-label", for: "exampleInputEmail1"  %><br />
        <%= f.email_field :email, class: "form-control", id: "exampleInputEmail1", autofocus: true, autocomplete: "email"  %>
      </div>

      <div class="d-grid gap-2">
        <%= f.submit "Send me reset password instructions", class: 'btn btn-primary mt-2 mb-3' %>
      </div>
      <hr class="mt-0 mb-4">

      <div class="container">
        <div class="row">
          <div class="col text-start">
            <%= link_to "Log in", new_session_path(resource_name), class: "btn btn-primary w-auto"%>
          </div>
          <div class="col text-end">
            <%= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-primary w-auto" %>
          </div>
        </div>
      </div>
    </div>
  </div>

<% end %>